<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recycler_seat_booking"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="4dp"
    android:background="@drawable/card_border"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".ui.SeatBookingFragment">

    <LinearLayout
        android:id="@+id/lyt_seat_booking_reserved_seat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="5dp">

        <Button
            android:id="@+id/btn_seat_booking_reserved_seat"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_gravity="end"
            android:layout_marginTop="0dp"
            android:background="@drawable/button_crud"
            android:backgroundTint="@color/btn_reserved"
            android:editable="false"
            android:fontFamily="@font/quicksand_bold"
            android:text="Reserve Seat"
            android:textColor="@color/btn_reserved_text"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="9">

            <TextView
                android:id="@+id/lbl_seat_booking_txt_next"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="20dp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/font_awesome_free_solid_900"
                android:text="\uf063"
                android:textColor="@color/medi_medication_next"
                android:textSize="25dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4">

                <TextView
                    android:id="@+id/lbl_seat_booking_train_depart"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="2"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="Galle"
                    android:textColor="@color/medi_blue"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4">

                <TextView
                    android:id="@+id/lbl_seat_booking_train_arrival"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="Colombo Fort"
                    android:textColor="@color/medi_blue"
                    android:textSize="20dp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_weight="7">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="2"
            android:fontFamily="@font/quicksand_bold"
            android:text="Train : "
            android:textAlignment="textEnd"
            android:textColor="#101010"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txt_seat_booking_train_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:fontFamily="@font/quicksand_bold"
            android:text="N/A"
            android:textColor="#EF8505"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="7">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fontFamily="@font/quicksand_bold"
            android:text="Departure"
            android:textColor="#101010"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="7">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="2"
            android:fontFamily="@font/quicksand_bold"
            android:text="Station : "
            android:textAlignment="textEnd"
            android:textColor="#101010"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txt_seat_booking_train_depart_station"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:fontFamily="@font/quicksand_semibold"
            android:text="N/A"
            android:textColor="#7A7A7A"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="7">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="2"
            android:fontFamily="@font/quicksand_bold"
            android:text="Time : "
            android:textAlignment="textEnd"
            android:textColor="#101010"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txt_seat_booking_train_depart_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:fontFamily="@font/quicksand_semibold"
            android:text="N/A"
            android:textColor="#7A7A7A"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_weight="7">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fontFamily="@font/quicksand_bold"
            android:text="Arrival"
            android:textColor="#101010"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="7">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="2"
            android:fontFamily="@font/quicksand_bold"
            android:text="Station : "
            android:textAlignment="textEnd"
            android:textColor="#101010"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txt_seat_booking_train_arrival_station"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:fontFamily="@font/quicksand_semibold"
            android:text="N/A"
            android:textColor="#7A7A7A"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="7">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="2"
            android:fontFamily="@font/quicksand_bold"
            android:text="Time : "
            android:textAlignment="textEnd"
            android:textColor="#101010"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txt_seat_booking_train_arrival_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:fontFamily="@font/quicksand_semibold"
            android:text="N/A"
            android:textColor="#7A7A7A"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_weight="7">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fontFamily="@font/quicksand_bold"
            android:text="Status :"
            android:textColor="#101010"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txt_seat_booking_train_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:fontFamily="@font/quicksand_bold"
            android:text="N/A"
            android:textColor="#7A7A7A"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="15dp">

        <Button
            android:id="@+id/btn_seat_booking_reserve_seat"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_gravity="end"
            android:layout_marginTop="0dp"
            android:background="@drawable/button_crud"
            android:backgroundTint="@color/btn_reserve"
            android:fontFamily="@font/quicksand_bold"
            android:text="Reserve Seat"
            android:textColor="@color/btn_reserve_text"
            android:textSize="15dp" />

    </LinearLayout>

</LinearLayout>
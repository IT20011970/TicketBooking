<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_bookings_cancel_summary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="8dp"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/lbl_header_medication"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="Cancel Booking"
                    android:textColor="@color/medi_blue"
                    android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

                <TextView
                    android:id="@+id/txt_bookings_cancel_summary_train_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="You have 4 seats remaining to reserve"
                    android:textColor="#EF8505"
                    android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

                <TextView
                    android:id="@+id/txt_bookings_cancel_summary_train"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="You have 4 seats remaining to reserve"
                    android:textColor="@color/btn_reserve_text"
                    android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

                <TextView
                    android:id="@+id/txt_bookings_cancel_summary_remaining"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="You have 4 seats remaining to reserve"
                    android:textColor="#101010"
                    android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="Do you want to cancel the booking ?"
                    android:textColor="#101010"
                    android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp">

                <Button
                    android:id="@+id/btn_bookings_cancel_summary_cancel_seat"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/button_crud"
                    android:backgroundTint="@color/btn_cancel"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="Cancel Booking"
                    android:textColor="@color/btn_cancel_text"
                    android:layout_marginRight="10dp"
                    android:textSize="14dp" />

        </LinearLayout>

</LinearLayout>